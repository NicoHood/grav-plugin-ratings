{% if enable_ratings_plugin %}

  <div class="ratings-summary">
    <span class="ratings-summary-average">{{ rating_results.average ? rating_results.average|number_format(1) : '?' }}</span>

    <ul class="rating-score" data-rating="{{ rating_results.average_rounded }}">
      <li class="rating-score-item"></li>
      <li class="rating-score-item"></li>
      <li class="rating-score-item"></li>
      <li class="rating-score-item"></li>
      <li class="rating-score-item"></li>
    </ul>

    <div class="ratings-summary-count">
      {{ rating_results.count }} {{ 'PLUGIN_RATINGS.RATINGS'|t }}
    </div>

    {% if rating_results.verified_count %}
      <div class="ratings-summary-verified-count">
        &#x2714;{{ rating_results.verified_count }} {{ 'PLUGIN_RATINGS.VERIFIED'|t }}
      </div>
    {% endif %}
  </div>

{% endif %}
